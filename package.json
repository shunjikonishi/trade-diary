{
  "name": "trade-diary",
  "version": "1.0.0",
  "description": "デイトレードの実績や反省点を記録するアプリケーション",
  "homepage": "https://github.com/shunjikonishi/trade-diary#readme",
  "bugs": {
    "url": "https://github.com/shunjikonishi/trade-diary/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shunjikonishi/trade-diary.git"
  },
  "license": "ISC",
  "author": "",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db": "bash -c 'docker compose exec postgres psql -U ${POSTGRES_USER:-postgres} -d ${POSTGRES_DB:-trade_diary}'",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:down": "tsx src/db/migrate-down.ts",
    "migrate:create": "tsx src/db/create-migration.ts",
    "db:generate-types": "bash -c 'DATABASE_URL=\"postgresql://${POSTGRES_USER:-postgres}:${POSTGRES_PASSWORD:-postgres}@${POSTGRES_HOST:-localhost}:${POSTGRES_PORT:-5432}/${POSTGRES_DB:-trade_diary}\" kysely-codegen' && tsx src/db/fix-types-order.ts"
  },
  "dependencies": {
    "kysely": "^0.28.8",
    "next": "^14.2.0",
    "pg": "^8.16.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-resizable-panels": "^4.0.13"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "kysely-codegen": "^0.19.0",
    "kysely-migration-cli": "^0.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0"
  }
}
